#include<bits/stdc++.h>
using namespace std;
int main(){
	int a[10][10],b[10][10],s[10][10],r,c,i,j;
	cout<<"Enter the numbers of row\n";
	cin>>r;
	cout<<"Enter the numbers of column\n";
	cin>>c;
	cout<<"Enter the 1st Matrix\n";
	for(i=0;i<r;i++)
	for(j=0;j<c;j++)
	cin>>a[i][j];
	cout<<"Enter the 2nd Matrix\n\n";
	for(i=0;i<r;i++)
	for(j=0;j<c;j++)
	cin>>b[i][j];
	cout<<"\n\n1st Matrix is:\n\n";
	for(i=0;i<r;i++){
	for(j=0;j<c;j++){
		cout<<a[i][j]<<"\t";
	}
	cout<<endl;
   }
	cout<<"\n\n2nd Matrix is:\n";
	for(i=0;i<r;i++){
	for(j=0;j<c;j++){
		cout<<b[i][j]<<"\t";
	}
	cout<<endl;
   }
   for(i=0;i<r;i++){
   	for(j=0;j<c;j++){
   		s[i][j]=a[i][j]+b[i][j];
	   }
   }
   	cout<<"\n\n\nSum of two Matrix is:\n\n";
	for(i=0;i<r;i++){
	for(j=0;j<c;j++){
		cout<<s[i][j]<<"\t";
	}
	cout<<endl;
   }	
	return 0;
}
